{
  "functions": {
    "source": "./",
    "function": "api"
  },
  "emulators": {
    "functions": {
      "port": 11000
    }
  },
  "hosting": {
    "public": "client/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
